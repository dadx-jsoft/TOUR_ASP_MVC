@model TOUR.Models.DonHangPheDuyet

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@*<h2>Delete</h2>*@

<h3>Bạn có chắc muốn xóa?</h3>
<div>
    @*<h4>DonHangPheDuyet</h4>
    <hr />*@
    <dl class="dl-horizontal">
        <dt>
            Mã hóa đơn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoaDon.hoaDonId)
        </dd>

        <dt>
            Tên tour
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoaDon.Tour.tenTour)
        </dd>

        <dt>
            Tên khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoaDon.tenKhachHang)
        </dd>

        <dt>
            Số điện thoại khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoaDon.sdtKhachHang)
        </dd>

        <dt>
            Trạng thái duyệt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.trangThaiDuyet)
        </dd>

        <dt>
            Ngày phê duyệt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ngayPheDuyet)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở lại", "Index")
        </div>
    }
</div>
