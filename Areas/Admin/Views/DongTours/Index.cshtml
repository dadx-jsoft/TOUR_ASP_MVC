@model IEnumerable<TOUR.Models.DongTour>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách dòng tour</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Dòng tour
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.moTaDongTour)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.dongTourId }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.dongTourId }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.dongTourId })
        </td>
    </tr>
}

</table>
