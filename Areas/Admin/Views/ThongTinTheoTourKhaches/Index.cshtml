@model IEnumerable<TOUR.Models.ThongTinTheoTourKhach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Phản hồi về tour</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Địa điểm
        </th>
        <th>
            Tên khách hàng
        </th>
        <th>
            Số điện thoại khách hàng
        </th>
        <th>
            Lời nhắn của khách hàng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tour.diaDiem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tenKhachHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sdtKhachHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.loiNhanKhachHang)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.id }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
