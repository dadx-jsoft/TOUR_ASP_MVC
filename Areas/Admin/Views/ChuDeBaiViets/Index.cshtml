}

<h2>Chủ đề bài viết</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Chủ đề
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.moTaChuDe)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ChuDeBaiVietId }) |
